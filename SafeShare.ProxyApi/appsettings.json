{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Issuer": "SafeShare_Klevis_Mema_Issuer",
    "Audience": "SafeShare_Klevis_Mema_Audience",
    "Key": "SafeShareServerAPI@2022Klevis_Mema",
    "KeyConfrimLogin": "SafeShareServerAPI@2022Klevis_Mema_ConfirmLogin",
    "LifeTime": 1,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Swagger": {
    "Doc": {
      "Version": "v1",
      "Tittle": "Safe Share Proxy API",
      "Licence": {
        "Name": "Web Api created by Klevis Mema",
        "Url-Linkedin": "https://www.linkedin.com/in/klevis-m-ab1b3b140/"
      }
    }
  },
  "Cors": {
    "Policy": {
      "Name": "Safe Share Allow All"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DefaultTokenExpirationTimeInHours": "1",
  "CookieSettings": {
    "AuthTokenCookieName": "AuthToken",
    "RefreshAuthTokenCookieName": "RefreshAuthToken",
    "RefreshAuthTokenIdCookieName": "RefreshAuthTokenId"
  },
  "RequestHeaderSettings": {
    "XSRF_TOKEN": "X-XSRF-TOKEN",
    "Client_XSRF_TOKEN": "XSRF-TOKEN",
    "AspNetCoreAntiforgery": ".AspNetCore.Antiforgery.NcD0snFZIjg",
    "ClientIP": "X-Original-Client-IP",
    "ApiKey": "X-Api-Key",
    "Bearer": "Bearer",
    "AuthToken": "authToken",
    "RefreshAuthToken": "refreshAuthToken",
    "RefreshAuthTokenId": "refreshAuthTokenId",
    "AspNetCoreIdentity": ".AspNetCore.Identity.Application"
  },
  "RequestMethodsSettings": {
    "Get": "GET",
    "Put": "PUT",
    "Post": "POST",
    "Delete": "DELETE"
  },
  "MainApiBaseAddr": "https://localhost:7046/",
  "MainClientBaseAddr": "https://localhost:7027",
  "ProxyClientName": "ProxyHttpClient",
  "IpRateLimitOptions": {
    "Limit": 100,
    "PeriodTimespan": 1
  },
  "AllowedHosts": "*"
}