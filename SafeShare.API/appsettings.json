{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=SafeShare;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "API_KEY": "1",
  "Jwt": {
    "Issuer": "SafeShare_Klevis_Mema_Issuer",
    "Audience": "SafeShare_Klevis_Mema_Audience",
    "Key": "SafeShareServerAPI@2022Klevis_Mema",
    "LifeTime": 1,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Swagger": {
    "ApplicationAuth": {
      "SecurityDefinition": {
        "Definition": "ApiKey",
        "Name": "X-Api-Key",
        "Description": "API Key authentication"
      },
      "SecurityRequirement": {
        "Name": "X-Api-Key",
        "Id": "ApiKey"
      }
    },
    "JwtAuth": {
      "SecurityDefinition": {
        "Definition": "Bearer",
        "Description": "Enter 'Bearer' [Space] and then your token in the input field below.",
        "Name": "Authorization",
        "Scheme": "Bearer",
        "BearerFormat": "Jwt"
      },
      "SecurityRequirement": {
        "Reference": {
          "Id": "Bearer"
        },
        "Scheme": "0auth2",
        "Name": "Bearer"
      }
    },
    "Doc": {
      "Version": "v1",
      "Tittle": "FAQ API",
      "Licence": {
        "Name": "Web Api created by Klevis Mema",
        "Url-Linkedin": "https://www.linkedin.com/in/klevis-m-ab1b3b140/"
      }
    }
  },
  "Cors": {
    "Policy": {
      "Name": "Task Manager Allow All"
    }
  },
  "Roles": {
    "Admin": "Admin",
    "User": "User"
  },
  "AllowedHosts": "*"
}
