<style>
    .mud-dialog {
        width: 400px !important;
    }

        .mud-dialog .mud-dialog-actions {
            padding: 8px 24px 16px 24px !important;
        }

        .mud-dialog .mud-dialog-title {
            padding: 16px 24px 8px 24px !important;
        }
</style>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Change email address?
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm @ref="@changeEmailForm" Model="EmailAddressRequestDto">
            <DataAnnotationsValidator />
            <MudTextField InputType="InputType.Email" @bind-Value="@EmailAddressRequestDto.CurrentEmailAddress" Label="Current email"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          AdornmentColor="Color.Primary"
                          Variant="Variant.Outlined"
                          Required=true />

            <MudTextField InputType="InputType.Email" @bind-Value="@EmailAddressRequestDto.NewEmailAddress" Label="New email"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          AdornmentColor="Color.Primary"
                          Variant="Variant.Outlined"
                          Required=true />

            <MudTextField InputType="InputType.Email" @bind-Value="@EmailAddressRequestDto.ConfirmNewEmailAddress" Label="Confirm new email"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          AdornmentColor="Color.Primary"
                          Variant="Variant.Outlined"
                          Required=true />
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton Disabled="_processing" Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="ValidateForm">
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="MudBlazor.Size.Small" Indeterminate="true" Color="Color.Primary" />
                <MudText Class="ms-2" Color="Color.Primary">Changing</MudText>
            }
            else
            {
                <MudText>Change Email</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>