<style>
    .mud-dialog {
        width: 400px !important;
    }

        .mud-dialog .mud-dialog-actions {
            padding: 8px 24px 16px 24px !important;
        }

        .mud-dialog .mud-dialog-title {
            padding: 16px 24px 8px 24px !important;
        }
</style>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Class="mr-3 mb-n1" />
            Deactivate Account?
        </MudText>
    </TitleContent>
    <DialogContent>
        <EditForm @ref="@deactivateAccountForm" Model="@Dto_DeactivateAccount">
            <DataAnnotationsValidator />
            <MudTextField InputType="InputType.Email" @bind-Value="@Dto_DeactivateAccount.Email" Label="Email"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Material.Filled.Email"
                          AdornmentColor="Color.Primary"
                          AdornmentAriaLabel="Show Password"
                          Variant="Variant.Outlined"
                          Required=true />

            <MudTextField InputType="@PasswordInput" @bind-Value="@Dto_DeactivateAccount.Password" Label="Password"
                          Adornment="Adornment.End"
                          AdornmentIcon="@PasswordInputIcon"
                          AdornmentColor="Color.Primary"
                          OnAdornmentClick="DisplayTxtPassword"
                          AdornmentAriaLabel="Show Password"
                          Variant="Variant.Outlined"
                          Required=true />
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton Disabled="_processing" Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="ValidateForm">
            @if (_processing)
            {
                <MudProgressCircular Class="ms-n1" Size="MudBlazor.Size.Small" Indeterminate="true" Color="Color.Primary" />
                <MudText Class="ms-2" Color="Color.Primary">Deactivating</MudText>
            }
            else
            {
                <MudText>Deactivate</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>